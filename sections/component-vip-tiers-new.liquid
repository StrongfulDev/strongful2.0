        <!-- LEGEND -->
        <div class="vip-tier-new">
            <div class="vip-tier-data-toggle">
                <h6>LEGEND</h6>
                {% render 'icon-caret' %}
            </div>
            <div class="vip-tier-data">
                <h4 class="vip-tier-big-title">LEGEND</h4>
                {% render 'icon-loyalty-star-four' %}
