{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<link
  rel="stylesheet"
  href="{{ 'component-slider.css' | asset_url }}"
  media="print"
  onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }
{%- endstyle -%}

{%- liquid
    assign columns_mobile_int = section.settings.columns_mobile | plus: 0
    assign show_mobile_slider = false
    if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
        assign show_mobile_slider = true
    endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-list-wrapper{% if section.settings.is_full_width %} collection-list--full-width full-width-padding{% else %} page-width {% endif %} isolate{% if show_mobile_slider %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %}{% if section.settings.show_view_all == false or section.blocks.size > collections.size %} no-mobile-link{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <h2 id="SectionHeading-{{ section.id }}" class="collection-list-title {{ section.settings.heading_size }} {{ section.settings.heading_type }}">
          {{ section.settings.title | escape }}
        </h2>

        {%- if section.settings.show_view_all and show_mobile_slider -%}
          <a
            href="{{ routes.collections_url }}"
            id="ViewAll-{{ section.id }}"
            class="link underlined-link large-up-hide"
            aria-labelledby="ViewAll-{{ section.id }} SectionHeading-{{ section.id }}">
            {{ 'sections.collection_list.view_all' | t }}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <slider-component class="slider-mobile-gutter">
      <ul
        class="collection-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if section.settings.swipe_on_mobile %} slider slider--tablet grid--peek{% endif %} collection-list--{{ section.blocks.size }}-items"
        id="Slider-{{ section.id }}"
        role="list">
        {%- liquid
                    assign columns = section.blocks.size
                    if columns > 3
                        assign columns = 3
                    endif

                    if section.settings.is_heading_overlay
                        assign wrapper_class = "heading_overlay"
                        assign custom_card_style = "standard_overlay"
                    endif
                -%}

        {%- for block in section.blocks -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}" class="collection-list__item grid__item{% if show_mobile_slider %} slider__slide{% endif %}{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}">
            {% comment %}
            {% render 'card-collection',
            card_collection: block.settings.collection,
            media_aspect_ratio: section.settings.image_ratio,
            columns: columns,
            wrapper_class: wrapper_class,
            custom_card_style: custom_card_style
            %}
            {% endcomment %}
            <a href="{{ block.settings.url }}" class="our-collections-list-link">
              <div class="our-collections-list-image">
                {%- if block.settings.image -%}
                  {{ block.settings.image | image_url: width: 2000 | image_tag:
                   loading: 'lazy',
                   sizes: "(min-width: 1000px) 760px, (min-width: 800px) calc(100vw - 380px), (min-width: 400px) 298px, 78.75vw",
                   widths: '550, 750, 1500, 2000',
                   class: 'our-collections-list-image__img' }}
                {%- else -%}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <span class="our-collections-list-title">
                {{ block.settings.link }}
              </span>
            </a>
          </li>
        {%- endfor -%}
      </ul>
      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}">
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true">
              /
            </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}">
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all and section.blocks.size < collections.size -%}
      <div class="center collection-list-view-all{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
        <a
          href="{{ routes.collections_url }}"
          class="button"
          id="ViewAllButton-{{ section.id }}"
          aria-labelledby="ViewAllButton-{{ section.id }} SectionHeading-{{ section.id }}">
          {{- 'sections.collection_list.view_all' | t -}}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.our-collection-list.name",
    "tag": "section",
    "class": "section section-collection-list",
    "max_blocks": 15,
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Collections",
        "label": "t:sections.our-collection-list.settings.title.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          }, {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          }, {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h1",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "select",
        "id": "heading_type",
        "options": [
          {
            "value": "heading_type_default",
            "label": "t:sections.all.heading_type.options__default.label"
          }, {
            "value": "heading_type_1",
            "label": "t:sections.all.heading_type.options__1.label"
          }, {
            "value": "heading_type_2",
            "label": "t:sections.all.heading_type.options__2.label"
          }, {
            "value": "heading_type_3",
            "label": "t:sections.all.heading_type.options__3.label"
          }
        ],
        "default": "heading_type_default",
        "label": "t:sections.all.heading_type.label"
      },
      {
        "type": "select",
        "id": "image_ratio",
        "options": [
          {
            "value": "adapt",
            "label": "t:sections.our-collection-list.settings.image_ratio.options__1.label"
          }, {
            "value": "portrait",
            "label": "t:sections.our-collection-list.settings.image_ratio.options__2.label"
          }, {
            "value": "square",
            "label": "t:sections.our-collection-list.settings.image_ratio.options__3.label"
          }
        ],
        "default": "square",
        "label": "t:sections.our-collection-list.settings.image_ratio.label",
        "info": "t:sections.our-collection-list.settings.image_ratio.info"
      }, {
        "type": "range",
        "id": "columns_desktop",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 3,
        "label": "t:sections.our-collection-list.settings.columns_desktop.label"
      }, {
        "type": "select",
        "id": "color_scheme",
        "options": [
          {
            "value": "accent-1",
            "label": "t:sections.all.colors.accent_1.label"
          },
          {
            "value": "accent-2",
            "label": "t:sections.all.colors.accent_2.label"
          },
          {
            "value": "background-1",
            "label": "t:sections.all.colors.background_1.label"
          },
          {
            "value": "background-2",
            "label": "t:sections.all.colors.background_2.label"
          }, {
            "value": "inverse",
            "label": "t:sections.all.colors.inverse.label"
          }
        ],
        "default": "background-1",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info"
      }, {
        "type": "checkbox",
        "id": "is_full_width",
        "default": true,
        "label": "t:sections.our-collection-list.settings.is_full_width.label"
      }, {
        "type": "checkbox",
        "id": "is_heading_overlay",
        "default": true,
        "label": "t:sections.our-collection-list.settings.is_heading_overlay.label"
      }, {
        "type": "checkbox",
        "id": "show_view_all",
        "default": false,
        "label": "t:sections.our-collection-list.settings.show_view_all.label"
      }, {
        "type": "header",
        "content": "t:sections.our-collection-list.settings.header_mobile.content"
      }, {
        "type": "select",
        "id": "columns_mobile",
        "options": [
          {
            "value": "1",
            "label": "t:sections.our-collection-list.settings.columns_mobile.options__1.label"
          }, {
            "value": "2",
            "label": "t:sections.our-collection-list.settings.columns_mobile.options__2.label"
          }
        ],
        "default": "1",
        "label": "t:sections.our-collection-list.settings.columns_mobile.label"
      }, {
        "type": "checkbox",
        "id": "swipe_on_mobile",
        "default": false,
        "label": "t:sections.our-collection-list.settings.swipe_on_mobile.label"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.our-collection-list.blocks.image.settings.image.label"
          }, {
            "type": "text",
            "id": "alt",
            "label": "t:sections.our-collection-list.blocks.image.settings.alt.label"
          }, {
            "type": "text",
            "id": "link",
            "label": "t:sections.our-collection-list.blocks.image.settings.link.label"
          }, {
            "type": "url",
            "id": "url",
            "label": "t:sections.our-collection-list.blocks.image.settings.url.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.our-collection-list.presets.name",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}