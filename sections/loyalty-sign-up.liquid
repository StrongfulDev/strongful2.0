<!-- A-List Login / Signup Section -->
{% unless customer %}
    <div class="loyalty-form-container fix-direction" id="registerHere">
        <div class="loyalty-form loyalty-form-register">
            {% section 'main-register.liquid' %}
        </div>
        <div class="loyalty-form loyalty-form-login hidden">
            {% section 'main-login.liquid' %}
        </div>
        <img class="loyalty-img desktop-only" src="https://cdn.shopify.com/s/files/1/0340/7986/7020/files/2_4bfbe089-9873-4a5a-9d25-edda6d1f6fe8.jpg?v=1708858958"
             alt="דוגמנית סטרונגפול" loading="lazy">
    </div>
{% endunless %}

{% if customer %}
    <!-- Refer Friends Section -->
    <div id="refer">
        <div class="yotpo-widget-instance" data-yotpo-instance-id="636553"></div>
    </div>
{% else %}
    <div class="yotpo-logged-out-refer-block">
        <img class="yotpo-logged-out-refer-image" src="https://cdn.shopify.com/s/files/1/0340/7986/7020/files/3_38e5d54b-45de-4929-af4c-f9e384128d21.jpg?v=1708858958" alt="refer a friend image two strongful models" loading="lazy">
        <div class="yotpo-logged-out-text">
            <div class="refer-title upper">be a friend</div>
            <div>
                <div class="refer-subtitle">תני הטבה לחברה ותקבלי הטבה בחזרה!</div>
                <div class="refer-subtitle">תפרגני לחברה ב - 15% הנחה בקנייה באתר ותצברי 10% מסך הקנייה הראשונה שלה - בנקודות!</div>
            </div>
            <div class="referral__join-or-login">
                <div class="i-wanna-join flex">
                    <span class="i-wanna-join-span">אני רוצה להצטרף>></span>
                </div>
                <p class="already-has-account-uno underline text-center">
                    רשומה כבר? התחברי
                </p>
            </div>
        </div>
    </div>
{% endif %}

{% schema %}

{
    "name": "Loyalty Sign Up",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 40
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 52
        }
    ],
    "presets": [
        {
            "name": "Loyalty Sign Up"
        }
    ]
}

{% endschema %}