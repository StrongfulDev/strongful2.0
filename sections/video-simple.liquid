{{ 'video-simple.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding video-section">
    {{ section.settings.video_url_mp4 | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'banner--video banner--video__mobile' }}
    {{ section.settings.desktop_video_url_mp4 | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'banner--video banner--video__desktop' }}
    <div class="video--action_container">
        <a href="{{ section.settings.url }}" class="video--call_to_action">
            {{ section.settings.button_label }}
        </a>
    </div>
</div>

{% schema %}

{
    "name": "Video - Simple",
    "tag": "section",
    "class": "section",
    "disabled_on": {
        "groups": ["header", "footer"]
    },
    "settings": [
        {
            "type": "video",
            "id": "video_url_mp4",
            "label": "Video in mp4 format",
            "info": "Upload a video in mp4 format for mobile."
        },
        {
            "type": "video",
            "id": "desktop_video_url_mp4",
            "label": "Video in mp4 format",
            "info": "Upload a video in mp4 format for desktop."
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button label",
            "label": "t:sections.slideshow.blocks.slide.settings.button_label.label",
            "info": "t:sections.slideshow.blocks.slide.settings.button_label.info"
        },
        {
            "type": "url",
            "id": "link",
            "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "presets": [
        {
            "name": "Video - Simple"
        }
    ]
}

{% endschema %}