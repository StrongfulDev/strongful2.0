{{ 'customer.css' | asset_url | stylesheet_tag }}
{{ 'customer.js' | asset_url | script_tag }}

{% assign orderPagination = section.settings.order_pagination %}
{%- liquid
    if customer.tags contains 'swell_vip_basic'
        assign vipTier = 'Basic'
    elsif customer.tags contains 'swell_vip_plus'
        assign vipTier = 'Plus'
    elsif customer.tags contains 'swell_vip_premium'
        assign vipTier = 'Premium'
    elsif customer.tags contains 'swell_vip_legend'
        assign vipTier = 'Legend'
    else
        assign vipTier = 'None'
    endif
    -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="customer account fix-direction section-{{ section.id }}-padding">
  <div>
    {% comment %}<h1 class="customer__title">{{ 'customer.account.title' | t }}</h1>{% endcomment %}
    {% comment %}<h1 class="customer__title">{{ customer.first_name }}</h1>{% endcomment %}
      <h1 class="customer__title">{{ 'customer.account.title' | t: name: customer.first_name }}</h1>
  </div>

  <div class="account-desktop-container">
      <div>
          <div class="main-account-info-container main-account-info-container--loyalty">
              <h4 class="container-title bold">מועדון הלקוחות שלי</h4>
              <a href="/pages/a-list" class="container-menu-item">ALIST <span>{{ vipTier }}</span>
                  {% render 'icon-caret' %}
              </a>
              <p class="container-extra-info">קופי על מועדון לקוחות שווה</p>
          </div>
          <div>

              <div class="main-account-info-container main-account-info-container--my-account">
                  <h2 class="container-title bold">{{ 'customer.account.sub-title' | t }}</h2>
                  <a href="#" class="container-menu-item container-menu-item-orders-toggler toggle-orders">{{ 'customer.orders.title' | t }}
                      {% render 'icon-caret' %}
                  </a>
                  <a href="{{ routes.account_addresses_url }}" class="container-menu-item container-menu-item--addresses">
                      {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
                      {% render 'icon-caret' %}
                  </a>
                  <a href="/pages/a-list#refer" class="container-menu-item container-menu-item-refer">{{ 'customer.orders.refer' | t }}
                      {% render 'icon-caret' %}
                  </a>

                  <div class="custom-orders-container">
                <span class="toggle-orders-button toggle-orders">
                    {% render 'icon-caret' %}
                </span>
                      {% paginate customer.orders by 100 %}
                          {%- if customer.orders.size > 0 -%}
                              <table role="table" class="order-history">
                                  <caption class="visually-hidden">
                                      {{ 'customer.orders.title' | t }}
                                  </caption>
                                  <thead role="rowgroup">
                                  <tr role="row">
                                      <th id="ColumnOrder" scope="col" role="columnheader">{{ 'customer.orders.order_number' | t }}</th>
                                      <th id="ColumnDate" scope="col" role="columnheader">{{ 'customer.orders.date' | t }}</th>
                                      <th id="ColumnPayment" scope="col" role="columnheader">{{ 'customer.orders.payment_status' | t }}</th>
                                      <th id="ColumnFulfillment" scope="col" role="columnheader">
                                          {{ 'customer.orders.fulfillment_status' | t }}
                                      </th>
                                      <th id="ColumnTotal" scope="col" role="columnheader">{{ 'customer.orders.total' | t }}</th>
                                  </tr>
                                  </thead>
                                  <tbody role="rowgroup">
                                  {%- for order in customer.orders -%}
                                      <tr role="row">
                                          <td
                                                  id="RowOrder"
                                                  role="cell"
                                                  headers="ColumnOrder"
                                                  data-label="{{ 'customer.orders.order_number' | t }}"
                                          >
                                              <a
                                                      href="{{ order.customer_url }}"
                                                      aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}"
                                              >
                                                  {{ order.name }}
                                              </a>
                                          </td>
                                          <td headers="RowOrder ColumnDate" role="cell" data-label="{{ 'customer.orders.date' | t }}">
                                              {{ order.created_at | time_tag: format: 'date' }}
                                          </td>
                                          <td
                                                  headers="RowOrder ColumnPayment"
                                                  role="cell"
                                                  data-label="{{ 'customer.orders.payment_status' | t }}"
                                          >
                                              {{ order.financial_status_label }}
                                          </td>
                                          <td
                                                  headers="RowOrder ColumnFulfillment"
                                                  role="cell"
                                                  data-label="{{ 'customer.orders.fulfillment_status' | t }}"
                                          >
                                              {{ order.fulfillment_status_label }}
                                          </td>
                                          <td headers="RowOrder ColumnTotal" role="cell" data-label="{{ 'customer.orders.total' | t }}">
                                              {{ order.total_net_amount | money_with_currency }}
                                          </td>
                                      </tr>
                                  {%- endfor -%}
                                  </tbody>
                              </table>
                          {%- else -%}
                              <p>{{ 'customer.orders.none' | t }}</p>
                          {%- endif -%}

                          {%- if paginate.pages > 1 -%}
                              {%- if paginate.parts.size > 0 -%}
                                  <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
                                      <ul role="list">
                                          {%- if paginate.previous -%}
                                              <li>
                                                  <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                                                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                                                          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                                                      </svg>
                                                  </a>
                                              </li>
                                          {%- endif -%}

                                          {%- for part in paginate.parts -%}
                                              <li>
                                                  {%- if part.is_link -%}
                                                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                                                          {{- part.title -}}
                                                      </a>
                                                  {%- else -%}
                                                      {%- if part.title == paginate.current_page -%}
                                                          <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                                                      {%- else -%}
                                                          <span>{{ part.title }}</span>
                                                      {%- endif -%}
                                                  {%- endif -%}
                                              </li>
                                          {%- endfor -%}

                                          {%- if paginate.next -%}
                                              <li>
                                                  <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                                                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                                                          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                                                      </svg>
                                                  </a>
                                              </li>
                                          {%- endif -%}
                                      </ul>
                                  </nav>
                              {%- endif -%}
                          {%- endif -%}
                      {% endpaginate %}
                  </div>
              </div>

              <div class="main-account-info-container main-account-info-container--support">
                  <h2 class="container-title bold">{{ 'customer.account.support.title' | t }}</h2>
                  <a href="/page/our-promise" class="container-menu-item container-menu-item--our-promise">
                      {{ 'customer.account.support.our-promise' | t }}
                      {% render 'icon-caret' %}
                  </a>
                  <a href="/" class="container-menu-item container-menu-item--terms">
                      {{ 'customer.account.support.terms' | t }}
                      {% render 'icon-caret' %}
                  </a>
                  <a href="/" class="container-menu-item container-menu-item-refer">
                      {{ 'customer.account.support.privacy-policy' | t }}
                      {% render 'icon-caret' %}
                  </a>
                  <a href="{{ routes.account_logout_url }}" class="container-menu-item container-menu-item-refer">
                      {{ 'customer.log_out' | t }}
                      {% render 'icon-caret' %}
                  </a>
              </div>

          </div>
      </div>
      <div class="custom-orders-container">
                <span class="toggle-orders-button toggle-orders">
                    {% render 'icon-caret' %}
                </span>
          {% paginate customer.orders by 6 %}
              {%- if customer.orders.size > 0 -%}
                  <table role="table" class="order-history">
                      <caption class="visually-hidden">
                          {{ 'customer.orders.title' | t }}
                      </caption>
                      <thead role="rowgroup">
                      <tr role="row">
                          <th id="ColumnOrder" scope="col" role="columnheader">{{ 'customer.orders.order_number' | t }}</th>
                          <th id="ColumnDate" scope="col" role="columnheader">{{ 'customer.orders.date' | t }}</th>
                          <th id="ColumnPayment" scope="col" role="columnheader">{{ 'customer.orders.payment_status' | t }}</th>
                          <th id="ColumnFulfillment" scope="col" role="columnheader">
                              {{ 'customer.orders.fulfillment_status' | t }}
                          </th>
                          <th id="ColumnTotal" scope="col" role="columnheader">{{ 'customer.orders.total' | t }}</th>
                      </tr>
                      </thead>
                      <tbody role="rowgroup">
                      {%- for order in customer.orders -%}
                          <tr role="row">
                              <td
                                      id="RowOrder"
                                      role="cell"
                                      headers="ColumnOrder"
                                      data-label="{{ 'customer.orders.order_number' | t }}"
                              >
                                  <a
                                          href="{{ order.customer_url }}"
                                          aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}"
                                  >
                                      {{ order.name }}
                                  </a>
                              </td>
                              <td headers="RowOrder ColumnDate" role="cell" data-label="{{ 'customer.orders.date' | t }}">
                                  {{ order.created_at | time_tag: format: 'date' }}
                              </td>
                              <td
                                      headers="RowOrder ColumnPayment"
                                      role="cell"
                                      data-label="{{ 'customer.orders.payment_status' | t }}"
                              >
                                  {{ order.financial_status_label }}
                              </td>
                              <td
                                      headers="RowOrder ColumnFulfillment"
                                      role="cell"
                                      data-label="{{ 'customer.orders.fulfillment_status' | t }}"
                              >
                                  {{ order.fulfillment_status_label }}
                              </td>
                              <td headers="RowOrder ColumnTotal" role="cell" data-label="{{ 'customer.orders.total' | t }}">
                                  {{ order.total_net_amount | money_with_currency }}
                              </td>
                          </tr>
                      {%- endfor -%}
                      </tbody>
                  </table>
              {%- else -%}
                  <p>{{ 'customer.orders.none' | t }}</p>
              {%- endif -%}

              {%- if paginate.pages > 1 -%}
                  {%- if paginate.parts.size > 0 -%}
                      <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
                          <ul role="list">
                              {%- if paginate.previous -%}
                                  <li>
                                      <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                                          <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                                              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                                          </svg>
                                      </a>
                                  </li>
                              {%- endif -%}

                              {%- for part in paginate.parts -%}
                                  <li>
                                      {%- if part.is_link -%}
                                          <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                                              {{- part.title -}}
                                          </a>
                                      {%- else -%}
                                          {%- if part.title == paginate.current_page -%}
                                              <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                                          {%- else -%}
                                              <span>{{ part.title }}</span>
                                          {%- endif -%}
                                      {%- endif -%}
                                  </li>
                              {%- endfor -%}

                              {%- if paginate.next -%}
                                  <li>
                                      <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                                          <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                                              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                                          </svg>
                                      </a>
                                  </li>
                              {%- endif -%}
                          </ul>
                      </nav>
                  {%- endif -%}
              {%- endif -%}
          {% endpaginate %}
      </div>
  </div>

    <div class="main-account-info-container main-account-info-container--contact">
        <p>{{ 'customer.account.contact.title' | t }}</p>
        <div class="contact-icons-container">
            <div class="contact-icon-child">
                <a href="mailto:{{ shop.email }}">
                    {% render 'envelope' %}
                </a>
                <p class="contact-text">{{ 'customer.account.contact.email' | t }}</p>
            </div>
            <div class="contact-icon-child">
                <a href="tel:{{ shop.phone }}">
                    {% render 'telephone' %}
                </a>
                <p class="contact-text">{{ 'customer.account.contact.phone' | t }}</p>
            </div>
        </div>
        <p class="business-hours">{{ 'customer.account.contact.business-hours' | t }}</p>
    </div>

    <div class="container-menu-item container-menu-item--logout">
        <p>לא {{ customer.first_name }}?</p>
        <a class="logout-link" href="{{ routes.account_logout_url }}">
            {{ 'customer.log_out' | t }}
        </a>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.main-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "order_pagination",
      "min": 0,
      "max": 20,
      "step": 1,
      "label": "t:sections.main-account.order-pagination",
      "default": 6
    }
  ],
    "blocks": [
        {
            "type":"link_list",
            "name":"t:sections.main-account.menu.name",
            "settings": [
                {
                    "type":"select",
                    "id": "heading_align",
                    "label": "t:sections.footer.blocks.link_list.settings.heading.label",
                    "default": "right",
                    "options": [
                        {
                            "value": "left",
                            "label": "t:sections.footer.blocks.link_list.settings.heading_align.options__1.label"
                        },
                        {
                            "value": "center",
                            "label": "t:sections.footer.blocks.link_list.settings.heading_align.options__2.label"
                        },
                        {
                            "value": "right",
                            "label": "t:sections.footer.blocks.link_list.settings.heading_align.options__3.label"
                        }
                    ]
                },
                {
                    "type": "text",
                    "id": "heading",
                    "default": "Quick links",
                    "label": "t:sections.footer.blocks.link_list.settings.heading.label"
                },
                {
                    "type": "link_list",
                    "id": "menu",
                    "default": "footer",
                    "label": "t:sections.footer.blocks.link_list.settings.menu.label",
                    "info": "t:sections.footer.blocks.link_list.settings.menu.info"
                }
            ]
        }
    ]
}
{% endschema %}
