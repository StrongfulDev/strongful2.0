{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<link
        rel="stylesheet"
        href="{{ 'component-slider.css' | asset_url }}"
        media="print"
        onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
{%- endstyle -%}

{%- liquid
    assign show_mobile_slider = false
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
    <div
            class="our-collection-list-new-wrapper{% if section.settings.is_full_width %} collection-list--full-width full-width-padding{% else %} page-width {% endif %} isolate{% if show_mobile_slider %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %} section-{{ section.id }}-padding">
        {%- unless section.settings.title == blank -%}
            <div
                    class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
                <h2 id="SectionHeading-{{ section.id }}"
                    class="collection-list-title {{ section.settings.heading_size }} {{ section.settings.heading_type }}">
                    {{ section.settings.title | escape }}
                </h2>
            </div>
        {%- endunless -%}

        <div class="our-collection-list-div">
            <ul
                    class="collection-list-new contains-card contains-card--collection
                    {% if settings.card_style == 'standard' %} contains-card--standard{% endif %}
                     grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                     grid--{{ section.settings.columns_desktop }}-col-desktop
                     collection-list--{{ section.blocks.size }}-items"
                    id="Slider-{{ section.id }}"
                    role="list">
                {%- liquid
                    assign columns = section.blocks.size
                    if columns > 3
                        assign columns = 3
                    endif
                -%}

                {%- for block in section.blocks -%}
                    <li
                            id="Slide-{{ section.id }}-{{ forloop.index }}"
                            class="collection-list__item grid__item
                            {% if block.settings.collection.featured_image == nil %}
                             collection-list__item--no-media
                            {% endif %}">
                                    <a href="{{ block.settings.url }}" class="our-collections-list-link">
                                        {%- if block.settings.image -%}
                                            {{ block.settings.image | image_url: width: 1500 | image_tag:
                                            sizes: "100vw",
                                            widths: '375, 550, 750, 1100, 1500',
                                            class: 'our-collections-list-image__img our-collections-list-image__img--new',
                                            alt: block.settings.link }}
                                        {%- else -%}
                                            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                        {%- endif -%}
                                        <span class="our-collections-list-item-title">
                                            {{ block.settings.link }}
                                        </span>
                                    </a>
                                </li>
                            {%- endfor -%}
            </ul>
        </div>


    </div>
</div>

{% schema %}
{
    "name": "Our Collection List V2",
    "tag": "section",
    "class": "section section-collection-list index-section",
    "max_blocks": 4,
    "disabled_on": {
        "groups": [
            "header",
            "footer"
        ]
    },
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Collections",
            "label": "t:sections.our-collection-list.settings.title.label"
        },
        {
            "type": "select",
            "id": "heading_size",
            "options": [
                {
                    "value": "h2",
                    "label": "t:sections.all.heading_size.options__1.label"
                },
                {
                    "value": "h1",
                    "label": "t:sections.all.heading_size.options__2.label"
                },
                {
                    "value": "h0",
                    "label": "t:sections.all.heading_size.options__3.label"
                }
            ],
            "default": "h1",
            "label": "t:sections.all.heading_size.label"
        },
        {
            "type": "select",
            "id": "heading_type",
            "options": [
                {
                    "value": "heading_type_default",
                    "label": "t:sections.all.heading_type.options__default.label"
                },
                {
                    "value": "heading_type_1",
                    "label": "t:sections.all.heading_type.options__1.label"
                },
                {
                    "value": "heading_type_2",
                    "label": "t:sections.all.heading_type.options__2.label"
                },
                {
                    "value": "heading_type_3",
                    "label": "t:sections.all.heading_type.options__3.label"
                }
            ],
            "default": "heading_type_default",
            "label": "t:sections.all.heading_type.label"
        },
        {
            "type": "select",
            "id": "image_ratio",
            "options": [
                {
                    "value": "adapt",
                    "label": "t:sections.our-collection-list.settings.image_ratio.options__1.label"
                },
                {
                    "value": "portrait",
                    "label": "t:sections.our-collection-list.settings.image_ratio.options__2.label"
                },
                {
                    "value": "square",
                    "label": "t:sections.our-collection-list.settings.image_ratio.options__3.label"
                }
            ],
            "default": "square",
            "label": "t:sections.our-collection-list.settings.image_ratio.label",
            "info": "t:sections.our-collection-list.settings.image_ratio.info"
        },
        {
            "type": "range",
            "id": "columns_mobile",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 3,
            "label": "t:sections.our-collection-list.settings.columns_mobile.label"
        },
        {
            "type": "range",
            "id": "columns_desktop",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 3,
            "label": "t:sections.our-collection-list.settings.columns_desktop.label"
        },
        {
            "type": "select",
            "id": "color_scheme",
            "options": [
                {
                    "value": "accent-1",
                    "label": "t:sections.all.colors.accent_1.label"
                },
                {
                    "value": "accent-2",
                    "label": "t:sections.all.colors.accent_2.label"
                },
                {
                    "value": "background-1",
                    "label": "t:sections.all.colors.background_1.label"
                },
                {
                    "value": "background-2",
                    "label": "t:sections.all.colors.background_2.label"
                },
                {
                    "value": "inverse",
                    "label": "t:sections.all.colors.inverse.label"
                }
            ],
            "default": "background-1",
            "label": "t:sections.all.colors.label",
            "info": "t:sections.all.colors.has_cards_info"
        },
        {
            "type": "checkbox",
            "id": "is_full_width",
            "default": true,
            "label": "t:sections.our-collection-list.settings.is_full_width.label"
        },
        {
            "type": "header",
            "content": "t:sections.our-collection-list.settings.header_mobile.content"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Collection Image"
                },
                {
                    "type": "text",
                    "id": "alt",
                    "label": "Image alt text"
                },
                {
                    "type": "text",
                    "id": "link",
                    "label": "Collection Title"
                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "Collection link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Our Collection List New - V2",
            "blocks": [
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                }
            ]
        }
    ]
}
{% endschema %}