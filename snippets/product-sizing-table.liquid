{% comment %}
  Renders a table with product specific sizing
  Accepts:
  - product: {Object} product object.
  - block: {Object} block object.

  Usage:
  {% render 'product-sizing-table',
    product: product,
    block: block
  %}
{% endcomment %}


{% style %}
    .div-block-460 {
    display: grid;
    margin: 10px 5px;
    gap: 0;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    grid-template-rows: auto auto;
    border: 1px solid rgba(var(--color-foreground));
    width: 96%;
    margin: 1em auto;
    font-size: 16px;
    place-items: center;
    }

    .model-size-text {
        width: 100%;
    border: 0.5px var(--gradient-base-accent-1) solid;
    text-align: center;
    }
{% endstyle %}

{% unless product.tags contains "אקססוריז" or product.tags contains 'kit' %}
    <div class="model-size-table-diff">
        <div class="product-meta-content none">
            <div class="modelsizedropdown">
                <div class="div-block-460">
                    <div class="model-size-text text-center">שם</div>
                    <div class="model-size-text text-center">גובה</div>
                    <div class="model-size-text text-center">חזה</div>
                    <div class="model-size-text text-center">מותן</div>
                    <div class="model-size-text text-center">אגן</div>
                    {% if product.tags contains "plusSizeProduct" %}
                        <div class="model-size-text text-center">{{ product.metafields.global.model }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.height }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.chest }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.waist }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.butt }}</div>
                    {% else %}
                        <div class="model-size-text text-center">{{ product.metafields.global.plusmodel }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.plusheight }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.pluschest }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.pluswaist }}</div>
                        <div class="model-size-text text-center">{{ product.metafields.global.plusbutt }}</div>
                    {% endif %}
                </div>
                <div class="all-sizes-are-in">{{ 'products.product.shipping_sizes' | t }}</div>
            </div>
        </div>
    </div>
{% endunless %}