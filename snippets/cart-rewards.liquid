{% comment %}
  Renders a tab that expands on click
  Accepts:
  - product: {Object} product object.
  - block: {Object} block object.

  Usage:
  {% render 'cart-rewards',
  %}
{% endcomment %}

<div class="rewards-section">
	<div class="reward-items">
		{% liquid
			assign free_shipping_text = 'sections.cart.rewards.free_shipping' | t
			assign upsell_text = 'sections.cart.rewards.upsell_text' | t
		%}
		{% render 'reward-item', icon: "lock", class: "free_shipping", title: free_shipping_text, active: false %}
		{% render 'reward-item', icon: "lock", class: "free_bottle", title: upsell_text, active: false %}
	</div>
	<div class="track-progress">
		<span class="progress-value"></span>
	</div>
	<div class="reward-text"></div>
</div>